{
  "name": "write-version",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to write the version to a file",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conventional-actions/write-version.git"
  },
  "homepage": "https://github.com/conventional-actions/write-version",
  "bugs": {
    "url": "https://github.com/conventional-actions/write-version/issues"
  },
  "keywords": [
    "GitHub",
    "action",
    "version"
  ],
  "author": "Conventional Actions",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@conventional-actions/toolkit": "^1.1.1",
    "glob": "^8.0.3"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.8.3",
    "@typescript-eslint/parser": "^5.35.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^27.0.1",
    "jest": "^28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  }
}
